<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_item_play_list_text_hint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">#CC000000</item>
        <item name="android:gravity">end|center</item>
        <item name="android:paddingEnd">@dimen/padding_24</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingRight">@dimen/padding_24</item>
    </style>

    <style name="style_item_tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/def_margin_start</item>
        <item name="android:maxEms">13</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/def_margin_start</item>
    </style>

    <style name="style_playlists_tv_amount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/def_margin_start</item>
        <item name="android:maxEms">13</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:layout_marginLeft">@dimen/def_margin_start</item>
    </style>

    <style name="rec_view_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>